# === 数据库 ===
DATABASE_URL=postgresql://user:password@localhost:5432/lsc_ai
REDIS_HOST=localhost
REDIS_PORT=6379

# === LLM 配置 ===
# Provider: 'deepseek' (官方API) 或 'openai-compatible' (内网/第三方)
LLM_DEFAULT_PROVIDER=deepseek
# 模型名称
LLM_DEFAULT_MODEL=deepseek-chat
# API Key（开发阶段使用 DeepSeek 官方 Key）
LLM_DEFAULT_API_KEY=
# 自定义 Base URL（留空使用官方默认地址）
# LLM_DEFAULT_BASE_URL=

# === 兼容旧配置（可选）===
DEEPSEEK_API_KEY=
# DEEPSEEK_BASE_URL=

# === Embedding 向量嵌入 ===
# Provider: 'fastembed' (本地 all-MiniLM-L6-v2, 384维) 或 'api' (公司 API, 1536维)
EMBEDDING_PROVIDER=fastembed
# 公司 Embedding API（仅 EMBEDDING_PROVIDER=api 时需要）
# EMBEDDING_API_URL=
# EMBEDDING_API_KEY=

# === Rerank 精排（仅 EMBEDDING_PROVIDER=api 时可用）===
# RERANK_API_URL=
# RERANK_API_KEY=

# === 存储 ===
LIBSQL_URL=file:./data/lsc-ai.db
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USER=minioadmin
MINIO_PASSWORD=minioadmin
MINIO_BUCKET=lsc-ai

# === 认证 ===
JWT_SECRET=your-jwt-secret
JWT_EXPIRES_IN=7d

# === 邮件服务 ===
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
MAIL_FROM=LSC-AI平台 <noreply@lsc-ai.com>

# === IDP OCR 服务 ===
IDP_OCR_URL=http://localhost:8001

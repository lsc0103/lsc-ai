<div style="max-width: 600px; margin: 0 auto; font-family: 'Microsoft YaHei', 'PingFang SC', Arial, sans-serif; background: #ffffff; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.08);">
  {{> header}}

  <div style="padding: 32px;">
    {{#if (eq level "critical")}}
    <div style="margin-bottom: 20px; padding: 12px 16px; background: #fff2f0; border: 1px solid #ffccc7; border-radius: 6px; border-left: 4px solid #ff4d4f;">
      <p style="margin: 0; font-size: 15px; color: #cf1322; font-weight: 600;">紧急告警</p>
    </div>
    {{else if (eq level "warning")}}
    <div style="margin-bottom: 20px; padding: 12px 16px; background: #fffbe6; border: 1px solid #ffe58f; border-radius: 6px; border-left: 4px solid #faad14;">
      <p style="margin: 0; font-size: 15px; color: #d48806; font-weight: 600;">警告通知</p>
    </div>
    {{else}}
    <div style="margin-bottom: 20px; padding: 12px 16px; background: #f6ffed; border: 1px solid #b7eb8f; border-radius: 6px; border-left: 4px solid #52c41a;">
      <p style="margin: 0; font-size: 15px; color: #389e0d; font-weight: 600;">信息通知</p>
    </div>
    {{/if}}

    <h2 style="margin: 0 0 12px 0; font-size: 18px; color: #333333;">告警内容</h2>
    <p style="margin: 0 0 20px 0; font-size: 14px; color: #555555; line-height: 1.6;">{{message}}</p>

    {{#if details}}
    <div style="margin-top: 16px; padding: 16px; background: #fafafa; border-radius: 6px; border: 1px solid #f0f0f0;">
      <p style="margin: 0 0 8px 0; font-size: 14px; color: #666666; font-weight: 500;">详细信息</p>
      <p style="margin: 0; font-size: 13px; color: #333333; line-height: 1.6; white-space: pre-wrap;">{{details}}</p>
    </div>
    {{/if}}

    <p style="margin: 20px 0 0 0; font-size: 13px; color: #999999;">
      告警时间: {{timestamp}}
    </p>
  </div>

  {{> footer}}
</div>

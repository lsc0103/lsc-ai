<div style="max-width: 600px; margin: 0 auto; font-family: 'Microsoft YaHei', 'PingFang SC', Arial, sans-serif; background: #ffffff; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.08);">
  {{> header}}

  <div style="padding: 32px;">
    {{#if (eq level "critical")}}
    <div style="margin-bottom: 20px; padding: 16px; background: #fff2f0; border: 1px solid #ffccc7; border-radius: 6px; border-left: 4px solid #ff4d4f;">
      <p style="margin: 0 0 4px 0; font-size: 16px; color: #cf1322; font-weight: 600;">Sentinel 紧急告警</p>
      <p style="margin: 0; font-size: 13px; color: #ff7875;">需要立即处理</p>
    </div>
    {{else if (eq level "warning")}}
    <div style="margin-bottom: 20px; padding: 16px; background: #fffbe6; border: 1px solid #ffe58f; border-radius: 6px; border-left: 4px solid #faad14;">
      <p style="margin: 0 0 4px 0; font-size: 16px; color: #d48806; font-weight: 600;">Sentinel 警告</p>
      <p style="margin: 0; font-size: 13px; color: #faad14;">请关注并及时处理</p>
    </div>
    {{else}}
    <div style="margin-bottom: 20px; padding: 16px; background: #e6f7ff; border: 1px solid #91d5ff; border-radius: 6px; border-left: 4px solid #1890ff;">
      <p style="margin: 0 0 4px 0; font-size: 16px; color: #096dd9; font-weight: 600;">Sentinel 信息通知</p>
      <p style="margin: 0; font-size: 13px; color: #40a9ff;">仅供参考</p>
    </div>
    {{/if}}

    <h2 style="margin: 0 0 12px 0; font-size: 18px; color: #333333;">告警内容</h2>
    <p style="margin: 0 0 20px 0; font-size: 14px; color: #555555; line-height: 1.6;">{{message}}</p>

    <table cellpadding="0" cellspacing="0" border="0" width="100%" style="border-collapse: collapse; margin-bottom: 16px;">
      {{#if ruleName}}
      <tr>
        <td style="padding: 10px 16px; background: #fafafa; border: 1px solid #f0f0f0; width: 80px; font-size: 13px; color: #666666;">规则名称</td>
        <td style="padding: 10px 16px; border: 1px solid #f0f0f0; font-size: 13px; color: #333333;">{{ruleName}}</td>
      </tr>
      {{/if}}
      {{#if source}}
      <tr>
        <td style="padding: 10px 16px; background: #fafafa; border: 1px solid #f0f0f0; width: 80px; font-size: 13px; color: #666666;">来源</td>
        <td style="padding: 10px 16px; border: 1px solid #f0f0f0; font-size: 13px; color: #333333;">{{source}}</td>
      </tr>
      {{/if}}
      {{#if agentName}}
      <tr>
        <td style="padding: 10px 16px; background: #fafafa; border: 1px solid #f0f0f0; font-size: 13px; color: #666666;">Agent</td>
        <td style="padding: 10px 16px; border: 1px solid #f0f0f0; font-size: 13px; color: #333333;">{{agentName}}</td>
      </tr>
      {{/if}}
      {{#if metric}}
      <tr>
        <td style="padding: 10px 16px; background: #fafafa; border: 1px solid #f0f0f0; font-size: 13px; color: #666666;">当前值</td>
        <td style="padding: 10px 16px; border: 1px solid #f0f0f0; font-size: 13px; color: #ff4d4f; font-weight: 600;">{{metric}}</td>
      </tr>
      {{/if}}
      {{#if threshold}}
      <tr>
        <td style="padding: 10px 16px; background: #fafafa; border: 1px solid #f0f0f0; font-size: 13px; color: #666666;">阈值</td>
        <td style="padding: 10px 16px; border: 1px solid #f0f0f0; font-size: 13px; color: #333333;">{{threshold}}</td>
      </tr>
      {{/if}}
    </table>

    {{#if details}}
    <div style="padding: 16px; background: #fafafa; border-radius: 6px; border: 1px solid #f0f0f0;">
      <p style="margin: 0 0 8px 0; font-size: 14px; color: #666666; font-weight: 500;">详细数据</p>
      <p style="margin: 0; font-size: 13px; color: #333333; line-height: 1.6; white-space: pre-wrap;">{{details}}</p>
    </div>
    {{/if}}

    <p style="margin: 20px 0 0 0; font-size: 13px; color: #999999;">
      告警时间: {{timestamp}}
    </p>
  </div>

  {{> footer}}
</div>

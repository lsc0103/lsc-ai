<div style="max-width: 600px; margin: 0 auto; font-family: 'Microsoft YaHei', 'PingFang SC', Arial, sans-serif; background: #ffffff; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.08);">
  {{> header}}

  <div style="padding: 32px;">
    <h2 style="margin: 0 0 16px 0; font-size: 18px; color: #333333;">报告分发通知</h2>

    <div style="padding: 20px; background: #f0f5ff; border-radius: 8px; border: 1px solid #d6e4ff;">
      <table cellpadding="0" cellspacing="0" border="0" width="100%">
        <tr>
          <td style="vertical-align: top; width: 48px;">
            <div style="width: 40px; height: 40px; background: #1a73e8; border-radius: 8px; text-align: center; line-height: 40px; color: #ffffff; font-size: 18px;">
              &#128196;
            </div>
          </td>
          <td style="padding-left: 12px;">
            <p style="margin: 0 0 4px 0; font-size: 16px; color: #333333; font-weight: 600;">
              {{reportName}}
            </p>
            <p style="margin: 0; font-size: 13px; color: #666666;">
              {{description}}
            </p>
          </td>
        </tr>
      </table>
    </div>

    <p style="margin: 20px 0 0 0; font-size: 13px; color: #999999;">
      生成时间: {{timestamp}}
    </p>
  </div>

  {{> footer}}
</div>

<div style="max-width: 600px; margin: 0 auto; font-family: 'Microsoft YaHei', 'PingFang SC', Arial, sans-serif; background: #ffffff; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.08);">
  {{> header}}

  <div style="padding: 32px;">
    <h2 style="margin: 0 0 16px 0; font-size: 18px; color: #333333;">系统事件通知</h2>

    <div style="padding: 16px; background: #f0f5ff; border-radius: 6px; border: 1px solid #d6e4ff; border-left: 4px solid #1a73e8; margin-bottom: 20px;">
      <p style="margin: 0 0 4px 0; font-size: 15px; color: #1a73e8; font-weight: 600;">{{eventType}}</p>
      <p style="margin: 0; font-size: 14px; color: #555555; line-height: 1.6;">{{message}}</p>
    </div>

    {{#if details}}
    <div style="padding: 16px; background: #fafafa; border-radius: 6px; border: 1px solid #f0f0f0;">
      <p style="margin: 0 0 8px 0; font-size: 14px; color: #666666; font-weight: 500;">详细信息</p>
      <p style="margin: 0; font-size: 13px; color: #333333; line-height: 1.6; white-space: pre-wrap;">{{details}}</p>
    </div>
    {{/if}}

    <p style="margin: 20px 0 0 0; font-size: 13px; color: #999999;">
      事件时间: {{timestamp}}
    </p>
  </div>

  {{> footer}}
</div>

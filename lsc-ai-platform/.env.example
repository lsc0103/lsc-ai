# ================================
# LSC-AI Platform 环境变量配置
# 复制此文件为 .env 并填入实际值
# ================================

# -------- 数据库配置 --------
DATABASE_URL="postgresql://lscai:lscai123@localhost:5432/lscai_dev?schema=public"
DB_HOST=localhost
DB_PORT=5432
DB_USER=lscai
DB_PASSWORD=lscai123
DB_NAME=lscai_dev

# -------- Redis 配置 --------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# -------- MinIO 配置 --------
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USER=minioadmin
MINIO_PASSWORD=minioadmin123
MINIO_BUCKET=lscai

# -------- JWT 配置 --------
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-refresh-token-secret-at-least-32-chars
JWT_REFRESH_EXPIRES_IN=7d

# -------- LLM 模型配置 --------
# 支持 deepseek（默认）和 openai-compatible（公司内网 LLM）
LLM_DEFAULT_PROVIDER=deepseek
LLM_DEFAULT_MODEL=deepseek-chat
LLM_DEFAULT_API_KEY=your-llm-api-key
# LLM_DEFAULT_BASE_URL=  # deepseek 可不填（使用默认），openai-compatible 必填

# 向下兼容旧配置（LLM_DEFAULT_API_KEY 优先）
DEEPSEEK_API_KEY=your-deepseek-api-key

# -------- 应用配置 --------
NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:5173

# -------- 凭证加密 --------
CREDENTIAL_SALT=your-credential-salt-32-characters
CREDENTIAL_KEY=your-credential-encryption-key-here

# -------- 日志配置 --------
LOG_LEVEL=debug
